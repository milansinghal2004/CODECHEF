#include <stdio.h>

int main(void) {
	 int t;
    int n;
    scanf("%d",&t);
    while(t--)
    {
        int count=0 ;
        scanf("%d",&n);
        char arr1[n+1],arr2[n+1];
    scanf("%s", arr1);
    scanf("%s", arr2);
     for (int j=0;j<n;j++)
     {
         if (arr1[j]!= arr2[j])
         count++;
      }
    if (count%2==0)
    printf("1\n");
    else 
    printf("0\n");
    
        
    }
	return 0;
}

