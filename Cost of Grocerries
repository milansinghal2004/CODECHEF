#include <stdio.h>

int main(void) {
	int t;
	scanf("%d",&t);
	while(t--){
	    int n,x,sum=0;
	    scanf("%d%d", &n, &x);
	    int A[n],B[n];
	    for(int i=0; i<n; i++){
	        scanf("%d",&A[i]);
	    }
	    for(int i=0; i<n; i++){
	        scanf("%d",&B[i]);
	    }
	    for(int i=0; i<n; i++) {
	        if (A[i]>=x)
	        {
	            sum += B[i];
	        }
	        //else
	        {
	          //  printf("0\n");
	        }
	    }
	    printf("%d\n",sum);
	}
	return 0;
}

